{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Открыть index.html в браузере",
      "type": "chrome",
      "request": "launch",
      "file": "${workspaceFolder}/index.html"
    },
    {
      "name": "Запустить локальный сервер (npm run dev)",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run",
        "dev"
      ],
      "serverReadyAction": {
        "pattern": "Local:.*https?://localhost:([0-9]+)",
        "uriFormat": "http://localhost:%s",
        "action": "openExternally"
      },
      "skipFiles": [
        "<node_internals>/**"
      ]
    }
  ]
}
